<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TopText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/Text</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">@dimen/Padding_Left</item>
        <item name="android:paddingLeft">@dimen/Padding_Left</item>
        <item name="android:paddingEnd">@dimen/Padding_Right</item>
        <item name="android:paddingRight">@dimen/Padding_Right</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="BottomText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/Text</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

</resources>
